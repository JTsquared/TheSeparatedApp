            $('.uploadImg').on('change', function (evt) {

                var fileUpload = $('.uploadImg').get(0);
                var files = fileUpload.files;
                var file = files[0];

                var reader = new FileReader();

                $('.imgPreview').show();

                reader.onload = function (e) {
                    $('.dependentImg').attr('src', e.target.result);
                }

                reader.readAsDataURL(file);
            })
        })

    </script>
